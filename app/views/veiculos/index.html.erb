<div class="page-header">
  <%= link_to new_veiculo_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Veiculo
  <% end %>
  <h1>Listing veiculos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nome</th>
            <th>Cor</th>
            <th>Qnt passageiros</th>
            <th>Placa</th>
            <th>Valor</th>
            <th>Marca</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @veiculos.each do |veiculo| %>
        <%= content_tag :tr, id: dom_id(veiculo), class: dom_class(veiculo) do %>
                      <td><%= veiculo.nome %></td>
                      <td><%= veiculo.cor %></td>
                      <td><%= veiculo.qnt_passageiros %></td>
                      <td><%= veiculo.placa %></td>
                      <td><%= veiculo.valor %></td>
                      <td><%= veiculo.marca.nome %></td>
                    <td><%= link_to 'Ver', veiculo %></td>
          <td><%= link_to 'Editar', edit_veiculo_path(veiculo) %></td>
          <td><%= link_to 'Deletar', veiculo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
